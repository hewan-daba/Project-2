<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.sms.controller.LoginController"
      spacing="20"
      alignment="CENTER"
      stylesheets="/style/main/main.css">

    <!-- Proper Insets to prevent "Coerce" error -->
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Title -->
    <Label text="Student Management System"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Form - Organized correctly in Rows and Columns -->
    <GridPane hgap="10" vgap="15" alignment="CENTER">
        <!-- Row 0 -->
        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="usernameField" promptText="Enter username" 
                   prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <!-- Row 1 -->
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="passwordField" promptText="Enter password" 
                       prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Login" onAction="#handleLogin" prefWidth="80"/>
        <Button text="Register" onAction="#handleRegister" prefWidth="80"/>
    </HBox>

    <!-- Feedback Label -->
    <Label fx:id="messageLabel" textFill="red"/>

</VBox>