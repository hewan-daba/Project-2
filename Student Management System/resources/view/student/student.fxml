<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.sms.controller.StudentController"
      spacing="20"
      alignment="TOP_CENTER"
      stylesheets="/style/main/main.css">

    <!-- Explicit Padding to prevent "Coerce" error -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Student Management"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Form - Organized in Rows and Columns -->
    <GridPane hgap="10" vgap="15" alignment="CENTER">
        <Label text="Student ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="studentIdField" promptText="Enter Student ID" prefWidth="200" 
                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="fullNameField" promptText="Enter Full Name" prefWidth="200" 
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="emailField" promptText="Enter Email" prefWidth="200" 
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="phoneField" promptText="Enter Phone" prefWidth="200" 
                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Add" onAction="#handleAdd"/>
        <Button text="Update" onAction="#handleUpdate"/>
        <Button text="Delete" onAction="#handleDelete"/>
        <Button text="Clear" onAction="#handleClear"/>
    </HBox>

    <!-- Search Section -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Search:"/>
        <TextField fx:id="searchField" promptText="Name or ID"/>
        <Button text="Filter" onAction="#handleSearch"/>
    </HBox>

    <!-- TableView -->
    <TableView fx:id="studentTable" prefHeight="300" prefWidth="600">
        <columns>
            <TableColumn text="ID" fx:id="idColumn" prefWidth="50"/>
            <TableColumn text="Student ID" fx:id="studentIdColumn" prefWidth="100"/>
            <TableColumn text="Full Name" fx:id="fullNameColumn" prefWidth="150"/>
            <TableColumn text="Email" fx:id="emailColumn" prefWidth="200"/>
            <TableColumn text="Phone" fx:id="phoneColumn" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Navigation -->
    <Button text="Back to Dashboard" onAction="#handleBack"/>

</VBox>