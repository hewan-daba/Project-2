<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.sms.controller.EnrollmentController"
      spacing="20"
      alignment="TOP_CENTER"
      stylesheets="/style/main/main.css">

    <!-- Fix for "Unable to coerce 20" error -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Enrollment Management"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <!-- Form - Organized in Rows and Columns -->
    <GridPane hgap="15" vgap="10" alignment="CENTER">
        <Label text="Student:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ComboBox fx:id="studentComboBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Course:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="courseComboBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="statusComboBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Add" onAction="#handleAdd"/>
        <Button text="Update" onAction="#handleUpdate"/>
        <Button text="Delete" onAction="#handleDelete"/>
        <Button text="Clear" onAction="#handleClear"/>
    </HBox>

    <!-- Enrollment Table -->
    <TableView fx:id="enrollmentTable" prefHeight="300" prefWidth="600">
        <columns>
            <TableColumn text="ID" fx:id="idColumn" prefWidth="50"/>
            <TableColumn text="Student Name" fx:id="studentColumn" prefWidth="180"/>
            <TableColumn text="Course Name" fx:id="courseColumn" prefWidth="180"/>
            <TableColumn text="Status" fx:id="statusColumn" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Back Button -->
    <Button text="Back to Dashboard" onAction="#handleBack"/>

</VBox>