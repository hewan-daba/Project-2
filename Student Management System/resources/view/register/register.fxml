<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.sms.controller.RegistrationController"
      spacing="20" alignment="CENTER" stylesheets="/style/main/main.css">

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <Label text="User Registration" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="12" alignment="CENTER">
        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="usernameField" promptText="Enter username" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="passwordField" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Confirm Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <!-- ADDED FIELDS START HERE -->
        <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="fullNameField" promptText="Enter full name" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="emailField" promptText="Enter email" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="phoneField" promptText="Enter phone number" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <!-- ADDED FIELDS END HERE -->
        
        <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <ComboBox fx:id="roleComboBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    </GridPane>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Register" onAction="#handleRegister" prefWidth="100"/>
        <Button text="Back to Login" onAction="#handleBack" prefWidth="100"/>
    </HBox>
</VBox>